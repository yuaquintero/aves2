<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyutas"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/ruta1_1"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/ruta_detalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvnombreruta"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/tvnombreruta"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="77dp"
                android:text="Ruta"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvnombreruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:text="La Herrera"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="5dp"
                android:text="Longitud:" />

            <TextView
                android:id="@+id/tvlongitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="74dp"
                android:layout_marginStart="74dp"
                android:text="25 km" />
        </RelativeLayout>

    </ScrollView>


</LinearLayout>